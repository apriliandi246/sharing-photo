<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta http-equiv="X-UA-Compatible" content="ie=edge">
   <link rel="stylesheet" href="/css/full-navbar.css">
   <link rel="stylesheet" href="/css/profile.css">
   <title><%= name %></title>
</head>

<body>

   <%- include ('../partials/full-navbar') %>

   <div class="user-profile space-top">
      <div class="profile-picture">
         <img src="/uploads/user-picture/<%= img %>" alt="user-picture">
      </div>

      <div class="user-data">
         <p><%= name %></p>
         <p>Joined <span>: <%= formatDate(join) %></span></p>
         <p>Posts <span> : <%= new Intl.NumberFormat('id-ID').format(posts.length) %></span></p>
         <p><a href="/user/edit">edit profile</a></p>
         <p><a href="/post">make a post</a></p>
      </div>
   </div>

   <hr>

   <% if (posts.length >= 1) { %>
   <% posts.forEach(post => { %>
   <div class="user-post">
      <div class="image-post">
         <img src="/uploads/img-post/<%= post.image %>" alt="image-post">
      </div>

      <div class="description-post">
         <div class="date">
            <%= formatDate(post.createdAt) %>
         </div>

         <div class="description">
            <%= post.description %>
         </div>
      </div>
   </div>
   <% }); %>
   <% } %>

</body>

</html>